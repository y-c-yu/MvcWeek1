@model IEnumerable<MvcWeek1.Models.客戶聯絡人>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@using (Html.BeginForm("Index", "Contact", FormMethod.Get))
{
    @:職稱：
    @Html.TextBox("search", null)
    <input type="submit" name="submit" value="search"/>
    <br /><br />
}
<table class="table">
    <tr>
        <th>
            @Html.ActionLink("職稱", "Index", new { sortOrder = ViewBag.職稱SortParam, search = ViewBag.CustomerTitle })
        </th>
        <th>
            @Html.ActionLink("姓名", "Index", new { sortOrder = ViewBag.姓名SortParam, search = ViewBag.CustomerTitle })
        </th>
        <th>
            @Html.ActionLink("Email", "Index", new { sortOrder = ViewBag.EmailSortParam, search = ViewBag.CustomerTitle })
        </th>
        <th>
            @Html.ActionLink("手機", "Index", new { sortOrder = ViewBag.手機SortParam, search = ViewBag.CustomerTitle })
        </th>
        <th>
            @Html.ActionLink("電話", "Index", new { sortOrder = ViewBag.電話SortParam, search = ViewBag.CustomerTitle })
        </th>
        <th>
            @Html.ActionLink("客戶名稱", "Index", new { sortOrder = ViewBag.客戶名稱SortParam, search = ViewBag.CustomerTitle })
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.職稱)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.姓名)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.手機)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.電話)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.客戶資料.客戶名稱)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
